{
  "name": "decentral-games-mobile-client",
  "private": true,
  "scripts": {
    "start": "next start",
    "dev": "npm i && next dev",
    "start:production": "next start -p 3000",
    "tunnel": "local-ssl-proxy --source 3001 --target 3000",
    "build": "next build",
    "build:testing": "cross-env APP_ENV=testing next build",
    "build:development": "cross-env APP_ENV=development next build",
    "build:staging": "cross-env APP_ENV=staging next build",
    "build:production": "cross-env APP_ENV=production next build",
    "lint": "next lint",
    "prepare": "husky install",
    "pre-commit": "next lint --fix"
  },
  "dependencies": {
    "@walletconnect/utils": "^1.7.1",
    "@walletconnect/web3-provider": "^1.7.1",
    "axios": "0.21.4",
    "bootstrap": "^5.1.3",
    "classnames": "^2.3.1",
    "colyseus.js": "^0.14.13",
    "local-ssl-proxy": "^1.2.3",
    "lodash": "^4.17.21",
    "next": "12.0.9",
    "next-pwa": "^5.4.1",
    "nextjs-progressbar": "0.0.13",
    "react": "17.0.2",
    "react-countdown-circle-timer": "^2.5.4",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "react-lottie": "^1.2.3",
    "react-motion": "^0.5.2",
    "sass": "^1.49.7",
    "socket.io-client": "^4.0.1",
    "web3": "1.5.2-rc.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/node": "16.11.9",
    "@types/react": "^17.0.36",
    "@types/react-lottie": "^1.2.6",
    "@types/react-motion": "^0.0.32",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "cross-env": "7.0.3",
    "env-cmd": "10.1.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.4",
    "prettier": "2.5.1",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md}": "prettier --write",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
